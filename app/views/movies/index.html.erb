<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Rating</th>
    <th>Release Date</th>
  </tr>
  <tr id="movies">
    <% @movies.each do |movie| %>
      <%= render movie %>
      <p>
        <%= link_to "Show this movie", movie %>
      </p>
    <% end %>
  </tr>
</table>
<%= link_to "New movie", new_movie_path %>
